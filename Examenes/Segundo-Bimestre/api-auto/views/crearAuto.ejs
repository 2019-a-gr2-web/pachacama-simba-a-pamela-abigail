<% const nombreUsuario = nombre;%>
<%- include('menuAdmin', {username: nombreUsuario})%>
<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>examen</title>
</head>
<body>
<div class="container">
    <form action="/examen/crearAuto/<%=idUsuario%>" method="post">
        <label for="chasis">chasis</label>
        <input type="number" id="chasis" name="chasis">
        <br>
        <label for="nombreMarca">nombre Marca</label>
        <input type="text" id="nombreMarca" name="nombreMarca">
        <br>
        <label for="colorUno">color uno</label>
        <input type="text" id="colorUno" name="colorUno">
        <br>
        <label for="colorDos">color dos</label>
        <input type="text" id="colorDos" name="colorDos">
        <br>
        <label for="nombreModelo">nombre modelo</label>
        <input type="text" id="nombreModelo" name="nombreModelo">
        <br>
        <label for="anio">anio</label>
        <input type="number" id="anio" name="anio">
        <br>
        <label for="costo">costo</label>
        <input type="number" id="costo" name="costo" min="0" step="0.01">
        <br>
        <label for="idUsuario"></label>
        <input type="hidden" name="idUsuario" id="idUsuario" value="<%=idUsuario%>" >
        <br>
        <button>crear</button>
        <a href="/examen/bienvenida"><button type="button">cancelar</button></a>
    </form>
</div>
</body>
</html>